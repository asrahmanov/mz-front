{% from 'macroses.html.twig' import image %}
<div class="intro-article__doctor">
    <div class="intro-article__ava">
        <div class="blog-ava blog-ava_l">{{ image(doctor.photo) }}</div>
    </div>
    <div class="intro-article__info">
        <div class="intro-article__caption">Автор статьи:</div>
        <a href="{{ path('doctor.show', {slug: doctor.slug}) }}"
           class="intro-article__name link">{{ doctor }}</a>
        <div class="intro-article__text">
            {{ doctor.specialties|join(' / ') }}<br>
            {% if doctor.experience %}
                Стаж: {{ 'years'|trans({years: doctor.experience}) }}
            {% endif %}
        </div>
    </div>
</div>
