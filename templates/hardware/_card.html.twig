{% from 'macroses.html.twig' import image %}

<div class="item-equipment">
    <div class="item-equipment__photo _ibg">{{ image(hardware.image) }}</div>
    <div class="item-equipment__body">
        <div class="item-equipment__title">{{ hardware.name }}</div>
        <div class="item-equipment__subtitle">{{ hardware.manufacturer }}</div>
        <div class="item-equipment__row">
            {% for advantage in hardware.advantages %}
            <div class="item-equipment__col">
                <div class="item-equipment__img">{{ image(advantage.icon) }}</div>
                <div class="item-equipment__characteristic">{{ advantage.text|nl2br }}</div>
            </div>
            {% endfor %}
        </div>
        <div class="item-equipment__btn">
{#            <a href="" class="btn btn_sec btn_m">подробнее</a>#}
        </div>
    </div>
</div>
