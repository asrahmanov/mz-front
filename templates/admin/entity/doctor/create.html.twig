{% extends 'admin/layout/layout1.html.twig' %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary">
                    {{ form_start(form) }}
                    <div class="card-header">
                        <h3 class="card-title">{{ form.vars['value'].id ? 'Редактирование' : 'Создание' }}</h3>
                    </div>
                    <div class="card-body">
                        <div class="col-12">{{ form_errors(form) }}</div>
                        <div class="col-12">{{ form_rest(form) }}</div>
                    </div>
                    <div class="card-footer text-right">{% include 'admin/_form-actions.html.twig' with {backUrl: path('admin.' ~ slug)} %}</div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
