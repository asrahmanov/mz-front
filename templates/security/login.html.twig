<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    {{ encore_entry_link_tags('admin') }}
    <style>
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            align-items: center;
        }

        form {
            max-width: 270px;
            width: 100%;
            margin: auto;
            text-align: center;
        }

        button {
            width: 100%;
        }
    </style>
    <title>Вход</title>
</head>
<body>
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Вы вошли как {{ app.user.username }}, <a href="{{ path('app_logout') }}">Выйти</a>
        </div>
    {% else %}
        <h1 class="h3 mb-3 font-weight-normal">Авторизация</h1>
        <label for="inputUsername">Логин</label>
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required
               autofocus>
        <label for="inputPassword">Пароль</label>
        <input type="password" name="password" id="inputPassword" class="form-control mb-3" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <!--
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Запомнить
            </label>
        </div>
        -->
        <button class="btn btn-lg btn-primary" type="submit">
            Войти
        </button>
    {% endif %}
</form>
</body>
</html>
